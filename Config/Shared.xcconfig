// Shared.xcconfig
// Minimal shared configuration for scaffold tool customization
// All other settings use Xcode project defaults
// Generated by XcodeBuildMCP

// ==========================================
// Project Identity
// ==========================================
PRODUCT_NAME = ClaudeSettings
PRODUCT_DISPLAY_NAME = Claude Settings
PRODUCT_BUNDLE_IDENTIFIER = br.eng.gustavo.ClaudeSettings
MARKETING_VERSION = 1.7
CURRENT_PROJECT_VERSION = 8

// ==========================================
// Platform Configuration
// ==========================================
MACOSX_DEPLOYMENT_TARGET = 15.4

// ==========================================
// Info PLIST
// ==========================================
// Generate Info.plist from build settings and merge with supplementary file
GENERATE_INFOPLIST_FILE = YES
INFOPLIST_FILE = ClaudeSettings/Info.plist

// ==========================================
// Entitlements
// ==========================================
// AI agents can modify Config/ClaudeSettings.entitlements to add capabilities
CODE_SIGN_ENTITLEMENTS = Config/ClaudeSettings.entitlements

// ==========================================
// Runtime Search Paths
// ==========================================
// Required for loading embedded frameworks like Sparkle
LD_RUNPATH_SEARCH_PATHS = $(inherited) @executable_path/../Frameworks

// ==========================================
// Debug Symbols Configuration
// ==========================================
// Generate dSYM files for crash reporting and App Store symbolication
DEBUG_INFORMATION_FORMAT = dwarf-with-dsym
COPY_PHASE_STRIP = NO
STRIP_INSTALLED_PRODUCT = YES
