{
  "version": "2025-11",
  "categories": [
    {
      "id": "model-behavior",
      "name": "Model & Behavior",
      "description": "Configure Claude's model selection and response behavior",
      "settings": [
        {
          "key": "model",
          "type": "string",
          "defaultValue": "Auto-selected based on availability",
          "description": "Deprecated: use env.ANTHROPIC_MODEL and env.ANTHROPIC_SMALL_FAST_MODEL instead. Either \"sonnet\", \"opus\", or a specific Claude model ID (see https://docs.anthropic.com/en/docs/about-claude/models/overview)",
          "deprecated": true,
          "examples": [
            {
              "code": "{\n  \"model\": \"claude-sonnet-4-5-20250929\"\n}",
              "description": "Set specific model version",
              "id": "32c2fe51-e649-49e3-b985-bbae152b142c"
            }
          ]
        },
        {
          "key": "outputStyle",
          "type": "string",
          "minLength": 1,
          "description": "The output style to use (case-sensitive). Can be 'default', 'Explanatory', 'Learning', or a custom style name.",
          "examples": [
            {
              "code": "{\n  \"outputStyle\": \"Explanatory\"\n}",
              "description": "Use explanatory output style",
              "id": "a1b2c3d4-e5f6-7890-abcd-ef1234567890"
            },
            {
              "code": "{\n  \"outputStyle\": \"Learning\"\n}",
              "description": "Use learning-focused output style",
              "id": "b2c3d4e5-f6a7-8901-bcde-f12345678901"
            }
          ]
        },
        {
          "key": "statusLine",
          "type": "object",
          "description": "Custom status line configuration. Requires 'type' (must be 'command') and 'command' (shell command to execute).",
          "required": ["type", "command"],
          "properties": {
            "type": {
              "type": "string",
              "const": "command"
            },
            "command": {
              "type": "string",
              "minLength": 1
            },
            "padding": {
              "type": "number"
            }
          },
          "examples": [
            {
              "code": "{\n  \"statusLine\": {\n    \"type\": \"command\",\n    \"command\": \"~/.claude/statusline.sh\"\n  }\n}",
              "description": "Custom status line using shell script",
              "id": "4af77421-8c04-4d66-af84-d44c709fd0fb"
            }
          ]
        },
        {
          "key": "forceLoginMethod",
          "type": "string",
          "enumValues": [
            "claudeai",
            "console"
          ],
          "description": "Force a specific login method, and skip the login method selection screen.",
          "examples": [
            {
              "code": "{\n  \"forceLoginMethod\": \"console\"\n}",
              "description": "Force console login method",
              "id": "c2eef542-7e9b-4176-a269-f4d945eb7dde"
            }
          ]
        },
        {
          "key": "alwaysThinkingEnabled",
          "type": "boolean",
          "description": "Whether extended thinking is always enabled (default: false).",
          "examples": [
            {
              "code": "{\n  \"alwaysThinkingEnabled\": true\n}",
              "description": "Enable extended thinking by default",
              "id": "f1a2b3c4-d5e6-7890-abcd-ef1234567890"
            }
          ]
        }
      ]
    },
    {
      "id": "authentication",
      "name": "Authentication",
      "description": "Control authentication methods and organization selection",
      "settings": [
        {
          "key": "apiKeyHelper",
          "type": "string",
          "minLength": 1,
          "description": "Custom script path to generate an auth value. The script should output credentials to stdout.",
          "relatedEnvVars": [
            "CLAUDE_CODE_API_KEY_HELPER_TTL_MS"
          ],
          "examples": [
            {
              "code": "{\n  \"apiKeyHelper\": \"/bin/generate_temp_api_key.sh\"\n}",
              "description": "Use custom script for authentication",
              "id": "0de23147-16e5-467a-896a-8e82e36368f4"
            }
          ]
        },
        {
          "key": "forceLoginOrgUUID",
          "type": "string",
          "format": "uuid",
          "minLength": 1,
          "description": "Force login with a specific organization UUID.",
          "examples": [
            {
              "code": "{\n  \"forceLoginOrgUUID\": \"xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx\"\n}",
              "description": "Auto-select organization",
              "id": "ae9a0a99-edfc-4f76-82de-7efdb794b1da"
            }
          ]
        },
        {
          "key": "awsAuthRefresh",
          "type": "string",
          "minLength": 1,
          "description": "Command to refresh AWS credentials.",
          "examples": [
            {
              "code": "{\n  \"awsAuthRefresh\": \"aws sso login --profile myprofile\"\n}",
              "description": "Refresh AWS SSO credentials",
              "id": "d1e2f3a4-b5c6-7890-abcd-ef1234567890"
            }
          ]
        },
        {
          "key": "awsCredentialExport",
          "type": "string",
          "minLength": 1,
          "description": "Command to export AWS credentials as JSON.",
          "examples": [
            {
              "code": "{\n  \"awsCredentialExport\": \"/bin/generate_aws_grant.sh\"\n}",
              "description": "Export AWS credentials via script",
              "id": "e2f3a4b5-c6d7-8901-bcde-f12345678901"
            }
          ]
        }
      ]
    },
    {
      "id": "workspace",
      "name": "Workspace Management",
      "description": "Configure workspace behavior, cleanup, and environment",
      "settings": [
        {
          "key": "cleanupPeriodDays",
          "type": "integer",
          "defaultValue": "30",
          "minimum": 0,
          "description": "How long to locally retain chat transcripts (in days).",
          "examples": [
            {
              "code": "{\n  \"cleanupPeriodDays\": 60\n}",
              "description": "Keep transcripts for 60 days",
              "id": "07343986-7681-4f0c-b70e-a5d698122bec"
            }
          ]
        },
        {
          "key": "includeCoAuthoredBy",
          "type": "boolean",
          "defaultValue": "true",
          "description": "Include 'co-authored-by Claude' byline in git commits and pull requests.",
          "examples": [
            {
              "code": "{\n  \"includeCoAuthoredBy\": false\n}",
              "description": "Disable co-author byline",
              "id": "c96eb2ac-c863-45d8-9e98-849e0429734f"
            }
          ]
        },
        {
          "key": "env",
          "type": "object",
          "defaultValue": "{}",
          "description": "Environment variables applied to every session. Variable names must match pattern ^[A-Z_][A-Z0-9_]*$.",
          "examples": [
            {
              "code": "{\n  \"env\": {\n    \"ANTHROPIC_MODEL\": \"claude-opus-4-1\",\n    \"ANTHROPIC_SMALL_FAST_MODEL\": \"claude-3-5-haiku-latest\"\n  }\n}",
              "description": "Configure Claude model selection",
              "id": "341a71b9-fe48-4525-891c-900700b9d8cb"
            }
          ]
        },
        {
          "key": "companyAnnouncements",
          "type": "array",
          "itemType": "string",
          "description": "Startup messages displayed to users, rotated randomly.",
          "examples": [
            {
              "code": "{\n  \"companyAnnouncements\": [\n    \"Welcome to Acme Corp development environment!\",\n    \"Remember to run tests before committing!\",\n    \"Check the wiki for coding standards.\"\n  ]\n}",
              "description": "Configure startup messages",
              "id": "5224bb73-6285-4d17-8f3b-7e3c03a9207b"
            }
          ]
        },
        {
          "key": "spinnerTipsEnabled",
          "type": "boolean",
          "description": "Whether to show tips in the spinner.",
          "examples": [
            {
              "code": "{\n  \"spinnerTipsEnabled\": false\n}",
              "description": "Disable spinner tips",
              "id": "a3b4c5d6-e7f8-9012-bcde-f12345678901"
            }
          ]
        }
      ]
    },
    {
      "id": "tool-integration",
      "name": "Tool Integration",
      "description": "Configure hooks and tool execution behavior",
      "settings": [
        {
          "key": "hooks",
          "type": "object",
          "description": "Hooks configuration for executing commands at specific points in Claude Code's lifecycle.",
          "hookTypes": [
            "PreToolUse",
            "PostToolUse",
            "Notification",
            "UserPromptSubmit",
            "Stop",
            "SubagentStop",
            "PreCompact",
            "SessionStart",
            "SessionEnd"
          ],
          "examples": [
            {
              "code": "{\n  \"hooks\": {\n    \"PostToolUse\": [\n      {\n        \"matcher\": \"Edit|Write\",\n        \"hooks\": [\n          {\n            \"type\": \"command\",\n            \"command\": \"prettier --write\",\n            \"timeout\": 5\n          }\n        ]\n      }\n    ]\n  }\n}",
              "description": "Run prettier after file edits",
              "id": "2297c4c7-08b3-41ea-8d50-2e663adbb7b8"
            }
          ]
        },
        {
          "key": "disableAllHooks",
          "type": "boolean",
          "defaultValue": "false",
          "description": "Disable all hook functionality globally.",
          "examples": [
            {
              "code": "{\n  \"disableAllHooks\": true\n}",
              "description": "Disable all hooks",
              "id": "3500016b-cbd4-46ec-8a49-8e868778b5fb"
            }
          ]
        }
      ]
    },
    {
      "id": "permissions",
      "name": "Permission System",
      "description": "Control tool access and file permissions",
      "settings": [
        {
          "key": "permissions.allow",
          "type": "array",
          "itemType": "string",
          "uniqueItems": true,
          "description": "List of allowed tool permission rules. Supports tool patterns like 'ToolName(pattern)'.",
          "patterns": [
            "Bash(command:*) - Prefix matching for bash commands",
            "Read(glob/pattern/**) - Glob patterns for file operations",
            "WebFetch(domain:example.com) - Domain restrictions"
          ],
          "examples": [
            {
              "code": "{\n  \"permissions\": {\n    \"allow\": [\n      \"Bash(git commit:*)\",\n      \"Bash(npm run lint:*)\",\n      \"Edit(/src/**/*.ts)\",\n      \"WebFetch(domain:github.com)\"\n    ]\n  }\n}",
              "description": "Allow common development tools",
              "id": "764e445b-392e-4473-b101-66c6ec91fa08"
            }
          ]
        },
        {
          "key": "permissions.ask",
          "type": "array",
          "itemType": "string",
          "uniqueItems": true,
          "description": "List of ask tool permission rules. User confirmation required before allowing tool use.",
          "examples": [
            {
              "code": "{\n  \"permissions\": {\n    \"ask\": [\n      \"Bash(gh pr create:*)\",\n      \"Bash(git commit:*)\"\n    ]\n  }\n}",
              "description": "Require confirmation for git operations",
              "id": "07e56fa7-0732-4ca7-a789-8af8f753116d"
            }
          ]
        },
        {
          "key": "permissions.deny",
          "type": "array",
          "itemType": "string",
          "uniqueItems": true,
          "description": "List of denied tool permission rules. Block specific tools or file patterns completely.",
          "examples": [
            {
              "code": "{\n  \"permissions\": {\n    \"deny\": [\n      \"Read(*.env)\",\n      \"Bash(rm:*)\",\n      \"Bash(curl:*)\"\n    ]\n  }\n}",
              "description": "Block access to sensitive files and commands",
              "id": "5e7d1236-d35d-4d97-b547-0f9357f6857f"
            }
          ]
        },
        {
          "key": "permissions.additionalDirectories",
          "type": "array",
          "itemType": "string",
          "itemMinLength": 1,
          "uniqueItems": true,
          "description": "Paths to additional directories Claude can access beyond the working directory.",
          "examples": [
            {
              "code": "{\n  \"permissions\": {\n    \"additionalDirectories\": [\n      \"//Users/alice/Documents\",\n      \"~/projects\"\n    ]\n  }\n}",
              "description": "Add access to additional directories",
              "id": "102ea426-efb4-48e5-9ee3-df91689632d0"
            }
          ]
        },
        {
          "key": "permissions.defaultMode",
          "type": "string",
          "enumValues": [
            "acceptEdits",
            "bypassPermissions",
            "default",
            "plan"
          ],
          "description": "Default permission mode for tool execution.",
          "examples": [
            {
              "code": "{\n  \"permissions\": {\n    \"defaultMode\": \"acceptEdits\"\n  }\n}",
              "description": "Start in accept edits mode",
              "id": "9114055a-772e-4937-ae8a-091b8005c132"
            }
          ]
        },
        {
          "key": "permissions.disableBypassPermissionsMode",
          "type": "string",
          "enumValues": [
            "disable"
          ],
          "description": "Prevent users from bypassing permission restrictions.",
          "examples": [
            {
              "code": "{\n  \"permissions\": {\n    \"disableBypassPermissionsMode\": \"disable\"\n  }\n}",
              "description": "Disable permission bypass",
              "id": "9884edfd-1321-46ba-9c22-9f30fbadd784"
            }
          ]
        }
      ]
    },
    {
      "id": "sandbox",
      "name": "Sandbox Configuration",
      "description": "Configure command sandboxing for filesystem and network isolation",
      "platformNote": "Only available on macOS and Linux",
      "settings": [
        {
          "key": "sandbox.enabled",
          "type": "boolean",
          "defaultValue": "false",
          "description": "Activate command sandboxing.",
          "examples": [
            {
              "code": "{\n  \"sandbox\": {\n    \"enabled\": true\n  }\n}",
              "description": "Enable sandbox",
              "id": "9dca8d88-9804-44d5-a129-270026e1b8a1"
            }
          ]
        },
        {
          "key": "sandbox.autoAllowBashIfSandboxed",
          "type": "boolean",
          "defaultValue": "true",
          "description": "Automatically approve Bash commands when they run in the sandbox.",
          "examples": []
        },
        {
          "key": "sandbox.allowUnsandboxedCommands",
          "type": "boolean",
          "defaultValue": "true",
          "description": "Allow commands to escape the sandbox when necessary. Set to false for strict enterprise policies.",
          "examples": [
            {
              "code": "{\n  \"sandbox\": {\n    \"allowUnsandboxedCommands\": false\n  }\n}",
              "description": "Enforce strict sandboxing",
              "id": "b12f20ca-20d0-421a-b818-8b5e09b03fcc"
            }
          ]
        },
        {
          "key": "sandbox.excludedCommands",
          "type": "array",
          "itemType": "string",
          "description": "Commands that always run outside the sandbox (prefix matching).",
          "examples": [
            {
              "code": "{\n  \"sandbox\": {\n    \"excludedCommands\": [\n      \"git\",\n      \"docker\",\n      \"npm\"\n    ]\n  }\n}",
              "description": "Exclude commands from sandbox",
              "id": "9e1ba135-f6df-435d-8855-1a9747766a73"
            }
          ]
        },
        {
          "key": "sandbox.network.allowUnixSockets",
          "type": "array",
          "itemType": "string",
          "description": "Unix socket paths accessible within the sandbox.",
          "examples": [
            {
              "code": "{\n  \"sandbox\": {\n    \"network\": {\n      \"allowUnixSockets\": [\n        \"/var/run/docker.sock\",\n        \"/tmp/my-app.sock\"\n      ]\n    }\n  }\n}",
              "description": "Allow specific Unix sockets",
              "id": "c557bf8f-a2cf-4fad-8fe2-ab821e3b9b25"
            }
          ]
        },
        {
          "key": "sandbox.network.allowLocalBinding",
          "type": "boolean",
          "defaultValue": "false",
          "platformNote": "macOS only",
          "description": "Allow binding to localhost ports within the sandbox.",
          "examples": []
        },
        {
          "key": "sandbox.network.httpProxyPort",
          "type": "number",
          "description": "Custom HTTP proxy port for sandbox network requests.",
          "examples": []
        },
        {
          "key": "sandbox.network.socksProxyPort",
          "type": "number",
          "description": "Custom SOCKS proxy port for sandbox network requests.",
          "examples": []
        },
        {
          "key": "sandbox.enableWeakerNestedSandbox",
          "type": "boolean",
          "defaultValue": "false",
          "description": "Reduce sandbox security for Docker/container environments where full isolation causes issues.",
          "examples": []
        }
      ]
    },
    {
      "id": "mcp",
      "name": "MCP Server Configuration",
      "description": "Configure Model Context Protocol servers",
      "settings": [
        {
          "key": "enableAllProjectMcpServers",
          "type": "boolean",
          "defaultValue": "false",
          "description": "Automatically approve all MCP servers defined in project-level configuration.",
          "examples": [
            {
              "code": "{\n  \"enableAllProjectMcpServers\": true\n}",
              "description": "Auto-approve project MCP servers",
              "id": "664d8b45-3719-4e0a-b9c2-66a2dbf5df79"
            }
          ]
        },
        {
          "key": "enabledMcpjsonServers",
          "type": "array",
          "itemType": "string",
          "itemMinLength": 1,
          "description": "List of allowed MCP servers from .mcp.json.",
          "examples": [
            {
              "code": "{\n  \"enabledMcpjsonServers\": [\n    \"memory\",\n    \"github\"\n  ]\n}",
              "description": "Enable specific MCP servers",
              "id": "095610b2-6f66-478c-aded-df817f40ca3a"
            }
          ]
        },
        {
          "key": "disabledMcpjsonServers",
          "type": "array",
          "itemType": "string",
          "itemMinLength": 1,
          "description": "List of denied MCP servers from .mcp.json.",
          "examples": [
            {
              "code": "{\n  \"disabledMcpjsonServers\": [\n    \"filesystem\"\n  ]\n}",
              "description": "Disable specific MCP servers",
              "id": "bc3c379f-f125-4c79-8483-02fc29f6966f"
            }
          ]
        },
        {
          "key": "allowedMcpServers",
          "type": "array",
          "itemType": "string",
          "defaultValue": "undefined (no restrictions)",
          "description": "Enterprise allowlist. Only listed servers can be used.",
          "examples": [
            {
              "code": "{\n  \"allowedMcpServers\": [\n    \"approved-internal-mcp\",\n    \"github-mcp\"\n  ]\n}",
              "description": "Restrict to approved servers only",
              "id": "5a68d8c0-d202-4837-b783-3a536d9794e4"
            }
          ]
        },
        {
          "key": "deniedMcpServers",
          "type": "array",
          "itemType": "string",
          "description": "Enterprise denylist. Listed servers are blocked. Takes precedence over allowlist.",
          "examples": [
            {
              "code": "{\n  \"deniedMcpServers\": [\n    \"unapproved-external-mcp\",\n    \"experimental-*\"\n  ]\n}",
              "description": "Block specific MCP servers",
              "id": "dfcbf2ec-d9ea-4cec-a871-6be32a831fba"
            }
          ]
        }
      ]
    },
    {
      "id": "plugins",
      "name": "Plugin System",
      "description": "Configure plugin enablement and marketplaces",
      "settings": [
        {
          "key": "enabledPlugins",
          "type": "array",
          "itemType": "string",
          "format": "plugin-name@marketplace-name",
          "description": "Control which plugins are enabled.",
          "examples": [
            {
              "code": "{\n  \"enabledPlugins\": [\n    \"swift-dev@official\",\n    \"custom-linter@company-marketplace\"\n  ]\n}",
              "description": "Enable specific plugins",
              "id": "88e62e71-4ecb-4896-a530-1ffbb6b3d659"
            }
          ]
        },
        {
          "key": "extraKnownMarketplaces",
          "type": "array",
          "itemType": "object",
          "description": "Define additional plugin sources beyond the official marketplace. Supports GitHub repositories, Git URLs, and local directories.",
          "examples": [
            {
              "code": "{\n  \"extraKnownMarketplaces\": [\n    {\n      \"name\": \"company-marketplace\",\n      \"type\": \"github\",\n      \"url\": \"https://github.com/company/claude-plugins\"\n    },\n    {\n      \"name\": \"local-dev\",\n      \"type\": \"local\",\n      \"path\": \"/Users/dev/my-plugins\"\n    }\n  ]\n}",
              "description": "Add custom plugin marketplaces",
              "id": "e265edc0-3d25-4ecc-be5a-f4fea1c16b67"
            }
          ]
        }
      ]
    }
